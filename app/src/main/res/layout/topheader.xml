<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/green_trans">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="31dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_top"
            android:onClick="backMethod"
            android:visibility="gone" />

        <Button
            android:id="@+id/backBtnCancel"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone" />

       <ImageView
            android:id="@+id/toplogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/backBtn"
            android:layout_toLeftOf="@+id/screenNameTop"
            android:layout_marginTop="3dp"
            android:src="@drawable/logo_top" />

        <TextView
            android:id="@+id/screenNameTop"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="5dp"
            android:text="Home"
            android:singleLine="false"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/cartlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="13dp"

                android:background="@drawable/cart_top" />

            <TextView
                android:id="@+id/caritemNo"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/group_1"
                android:gravity="center_horizontal"
                android:text="1"
                android:textAlignment="gravity"
                android:textColor="#ffffff"
                android:textSize="9sp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/headerPrice"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/cartlogo"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="9sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>
